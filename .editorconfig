# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[**.{json,yml,yaml}]
indent_size = 2
insert_final_newline = false

[**.{yml,yaml}]
indent_style = space

[{CMakeLists.txt,**.cmake}]
indent_style = space

